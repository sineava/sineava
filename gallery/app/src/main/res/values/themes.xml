    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen.Fullscreen" parent="Theme.AppCompat.Light.NoActionBar.FullScreen">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.AppCompat.Light.NoActionBar.FullScreen.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Gallery.FullscreenContainer" parent="">
